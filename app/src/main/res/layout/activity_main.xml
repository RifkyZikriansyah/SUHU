<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_editor_absoluteX="8dp"
        app:layout_editor_absoluteY="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtCelcius"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:text="CELCIUS"
            android:textSize="21sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtCelcius"
            android:layout_toRightOf="@id/txtCelcius"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Masukkan Nilai Celcius"
            android:text=""/>

        <Button
            android:layout_width="350dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnKonversi"
            android:text="KONVERSI"
            android:onClick="SUHU"
            android:layout_below="@+id/txtCelcius"
            android:layout_marginTop="15dp"
            android:background="#44A3FC" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtKelvin"
            android:layout_marginTop="30dp"
            android:layout_below="@id/btnKonversi"
            android:layout_marginLeft="15dp"
            android:text="KELVIN"
            android:textSize="21sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtKelvin"
            android:layout_below="@+id/btnKonversi"
            android:layout_toRightOf="@+id/txtKelvin"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtFarenheit"
            android:layout_marginTop="30dp"
            android:layout_below="@id/txtKelvin"
            android:layout_marginLeft="15dp"
            android:text="FARENHEIT"
            android:textSize="21sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtFarenheit"
            android:layout_below="@+id/edtKelvin"
            android:layout_toRightOf="@+id/txtKelvin"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtReamur"
            android:layout_marginTop="30dp"
            android:layout_below="@id/txtFarenheit"
            android:layout_marginLeft="15dp"
            android:text="REAMUR"
            android:textSize="21sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtReamur"
            android:layout_below="@+id/edtFarenheit"
            android:layout_toRightOf="@+id/txtReamur"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""/>

        <Button
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnAC"
            android:text="AC"
            android:onClick="AC"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:layout_below="@+id/edtReamur"
            android:layout_marginTop="15dp"
            android:background="#E01A4F" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>